{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "zig",
			"args": ["build", "-Doptimize=ReleaseSmall"],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "test",
			"type": "shell",
			"command": "nu",
			"args": [ "-c", "glob *_test.nu | each { |f| nu $f }" ],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}
